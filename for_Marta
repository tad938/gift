    <script>
        // –î–æ–±–∞–≤–ª—è–µ–º –∏–Ω—Ç–µ—Ä–∞–∫—Ç–∏–≤–Ω–æ—Å—Ç—å
        const button = document.getElementById('congratulateButton');
        const march8Congrats = document.getElementById('march8Congrats');

        button.addEventListener('click', () => {
            march8Congrats.classList.remove('hidden'); // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –ø–æ–∑–¥—Ä–∞–≤–ª–µ–Ω–∏–µ
            button.style.display = 'none'; // –°–∫—Ä—ã–≤–∞–µ–º –∫–Ω–æ–ø–∫—É

            // –°–æ–∑–¥–∞—ë–º —Å–º–∞–π–ª–∏–∫–∏ –∏ —Ü–≤–µ—Ç—ã
            createFloatingEmojis();
        });

        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è —Å–æ–∑–¥–∞–Ω–∏—è –ø–ª–∞–≤–∞—é—â–∏—Ö —Å–º–∞–π–ª–∏–∫–æ–≤ –∏ —Ü–≤–µ—Ç–æ–≤
        function createFloatingEmojis() {
            const emojis = ['üòä', 'üå∏', 'üéâ', 'üíê', 'üòç', 'üå∫', 'ü•≥', 'üåº'];
            const numEmojis = 20; // –ö–æ–ª–∏—á–µ—Å—Ç–≤–æ —Å–º–∞–π–ª–∏–∫–æ–≤ –∏ —Ü–≤–µ—Ç–æ–≤

            for (let i = 0; i < numEmojis; i++) {
                const emoji = document.createElement('div');
                emoji.classList.add(Math.random() > 0.5 ? 'emoji' : 'flower');
                emoji.textContent = emojis[Math.floor(Math.random() * emojis.length)];
                emoji.style.left = `${Math.random() * 100}vw`; // –°–ª—É—á–∞–π–Ω–æ–µ –ø–æ–ª–æ–∂–µ–Ω–∏–µ –ø–æ –≥–æ—Ä–∏–∑–æ–Ω—Ç–∞–ª–∏
                emoji.style.top = `${Math.random() * 100}vh`; // –°–ª—É—á–∞–π–Ω–æ–µ –ø–æ–ª–æ–∂–µ–Ω–∏–µ –ø–æ –≤–µ—Ä—Ç–∏–∫–∞–ª–∏
                emoji.style.animationDuration = `${Math.random() * 3 + 2}s`; // –°–ª—É—á–∞–π–Ω–∞—è —Å–∫–æ—Ä–æ—Å—Ç—å –∞–Ω–∏–º–∞—Ü–∏–∏
                document.body.appendChild(emoji);
            }
        }

        // –ê–Ω–∏–º–∞—Ü–∏—è –ø—Ä–∏ –Ω–∞–∂–∞—Ç–∏–∏ –Ω–∞ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä
        const container = document.querySelector('.container');
        container.addEventListener('click', () => {
            container.style.transform = 'scale(1.1)';
            setTimeout(() => {
                container.style.transform = 'scale(1)';
            }, 300);
        });
    </script>
